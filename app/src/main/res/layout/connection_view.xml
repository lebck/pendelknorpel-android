<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="30dp"
    >

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight=".25"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="30dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/line"
        android:layout_gravity="start">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">
            <TextView
                style="@style/ConnectionText"
                android:id="@+id/start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:00"/>
            <TextView
                android:id="@+id/real_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/textWarning"
                android:text="10:00"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp">
            <TextView
                style="@style/ConnectionText"
                android:id="@+id/end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:00"/>
            <TextView
                android:id="@+id/real_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/textWarning"
                android:text="12:00" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".6"
        android:orientation="vertical"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:layout_marginEnd="30dp">
        <TextView
            style="@style/ConnectionText"
            android:id="@+id/start_location_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start"/>

        <TextView
            android:id="@+id/vehicle_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginVertical="20dp"
            android:text="BUS 7"/>

        <TextView
            style="@style/ConnectionText"
            android:id="@+id/end_location_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EndeEndeEndeEndeEndeEndeEndeEndeEndeEndeEndeEndeEndeEnde"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>


</LinearLayout>