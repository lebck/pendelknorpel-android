<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.hsrm.lback.myapplication">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/PendelKnorpel">
        <activity
            android:name=".domains.location.views.overview.LocationOverview"
            android:theme="@style/PendelKnorpel">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".domains.location.views.edit.EditLocationActivity" />
        <activity android:name=".domains.journey.views.overview.JourneyOverviewActivity" />
        <activity android:name=".domains.journey.views.detail.JourneyDetailActivity" />
        <activity android:name=".domains.gpslist.GpsListActivity"/>

    </application>

</manifest>